{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "NEXT_PUBLIC_API_KEY",
    "NODE_ENV",
    "NEXT_PUBLIC_BASE_API_URL",
    "BASE_API_URL"
  ]
}
