{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "NODE_ENV",
    "NOTION_TOKEN",
    "NOTION_DB_ID",
    "NOTION_COL_EMAIL_ID"
  ]
}
